{
  "compilerOptions": {
    /* Projects */
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    /* Language and Environment */
    "target": "ESNext",
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    /* JavaScript Support */
    "allowJs": true,
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": false,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/"
  ]
}
